<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.RestSpring"
            class="restfulspring.view.RestFulSpringView"
            icon="icons/sample.png"
            id="com.restspringview"
            name="RestSpring"
            restorable="true">
      </view>
      <category
            id="com.RestSpring"
            name="RestSpring">
      </category>
   </extension>
   
	   
   <extension
	     point="org.eclipse.ui.preferencePages">
	  <page
	        name="RestSpring"
	        class="restfulspring.preference.MyPreferencesPage"
	        id="restspring.view.RestFulSpringView.preferences">
	  </page>
	</extension>
	
	
    <extension point="org.eclipse.ui.menus">
       <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
          <menu label="RestFulSpring" id="RestFulSpringMenu">
             <command
                   commandId="restspring.generate.correctPackage"
                   label="CorrectPackage"
                   style="push">
             </command>
             <command
                   commandId="restspring.generate.controllerMethod"
                   label="ControllerMethod"
                   style="push">
             </command>
             <command
                   commandId="restspring.generate.serviceMethod"
                   label="ServiceMethod"
                   style="push">
             </command>
             <groupMarker name="group1"></groupMarker>
             <separator name="separator1" visible="true"  groupId="RestFulSpringMenu/group1"></separator>
             <command
                   commandId="restspring.generate.feignFile"
                   label="FeignFile"
                   style="push">
             </command>
          </menu>
       </menuContribution>
    </extension>
    
  
    <extension point="org.eclipse.ui.commands">
       <command
             id="restspring.generate.serviceMethod"
             name="serviceMethod">
       </command>
       <command
             id="restspring.generate.controllerMethod"
             name="controllerMethod">
       </command>
       <command
             id="restspring.generate.correctPackage"
             name="correctPackage">
       </command>
       <command
             id="restspring.generate.feignFile"
             name="feignFile">
       </command>
    </extension>


      <extension point="org.eclipse.ui.handlers">
          <handler
                class="tool.method.ServiceMethod"
                commandId="restspring.generate.serviceMethod">
          </handler>
          <handler
                class="tool.method.ControllerMethod"
                commandId="restspring.generate.controllerMethod">
          </handler>
           <handler
                class="tool.correctPackage.CorrectPackage"
                commandId="restspring.generate.correctPackage">
          </handler>
          <handler
                class="tool.feignFile.FeignFile"
                commandId="restspring.generate.feignFile">
          </handler>
       </extension>
    	
    	
        	
	
</plugin>
